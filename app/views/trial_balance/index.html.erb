<table class="table table-striped" id="accounting_table">
<h2>試算表</h2>
<%= form_tag trial_balance_search_path, method: :get do %>
  <p> <%= date_select 'dselect','', :use_month_numbers => true, :discard_day => true %>
  <%= submit_tag "表示",:class => 'btn btn-primary' %></p>
<% end %>

  <thead>  
    <tr>
      <th>勘定科目名</th>
      <th>借方</th>
      <th>貸方</th>
  </thead>
  <tbody>
    <% @journals.each do |journal| %>
    <tr>
      <td><%= journal.name %></td>
      <td><%= journal.d_amounts %></td>
      <td><%= journal.c_amounts %></td>
    </tr>      
    <% end %>    
  </tbody>
</table>





